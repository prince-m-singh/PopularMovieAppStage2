<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textViewLabelPlotSynossis"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="10sp"
        android:text="@string/story_line"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewPlotSynossis"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:text="Movie PlotSynossis"
        app:layout_constraintLeft_toLeftOf="@+id/textViewLabelPlotSynossis"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewLabelPlotSynossis" />

    <TextView
        android:id="@+id/textViewLabelReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:text="@string/reviews"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="10sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlotSynossis"
        app:layout_constraintLeft_toLeftOf="@+id/textViewPlotSynossis" />

    <TextView
        android:id="@+id/textViewMovieReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MovieReview"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewLabelReview"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textViewLabelReview"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>